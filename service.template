[Unit]
Description=AI Agents FastAPI Service
After=network.target

[Service]
# Replace with your actual user and group
User=ai-agent-user
Group=ai-agent-user

# Replace with the absolute path to your project root
WorkingDirectory=/opt/ai-agents

# Adjust the path to the gunicorn executable inside your virtual environment
ExecStart=/opt/ai-agents/.venv/bin/gunicorn main:app --bind 0.0.0.0:8000 --workers 4 --worker-class uvicorn.workers.UvicornWorker --timeout 120

# Load environment variables from .env file
EnvironmentFile=/opt/ai-agents/.env

Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target